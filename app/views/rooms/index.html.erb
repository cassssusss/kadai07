<div class="container">
  <h1 class="my-4">施設一覧</h1>

  <%= form_with url: rooms_path, method: :get, local: true, class: "mb-4" do %>
    <div class="row g-3">
      <div class="col-md-4">
        <%= label_tag :search, "", for: "search_field", class: "form-label" %>
        <%= text_field_tag :search, params[:search], id: "search_field", class: "form-control", placeholder: "キーワードを入力" %>
      </div>

      <div class="col-md-4">
        <%= label_tag :area, "", for: "area_field", class: "form-label" %>
        <%= text_field_tag :area, params[:area], id: "area_field", class: "form-control", placeholder: "エリア名を入力" %>
      </div>

      <div class="col-md-4 d-flex align-items-end">
        <%= submit_tag "検索", class: "btn btn-primary w-100" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <% @rooms.each do |room| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to room.name, room_path(room), class: "stretched-link" %>
            </h5>

            <% if room.image.attached? %>
              <%= image_tag room.image, class: 'img-fluid' %>
            <% else %>
              <%= image_tag 'default-image.png', class: 'img-fluid' %> <!-- デフォルト画像 -->
            <% end %>

            <p class="card-text"><%= room.description %></p>
            <p class="card-text"><strong>料金:</strong> <%= room.price %>円/日</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
