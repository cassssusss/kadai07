<div class="container">
  <h1 class="my-4">プロフィール編集</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }, class: "mb-4") do |f| %>
    
    <!-- 名前フィールド -->
    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <!-- アイコン画像のアップロード -->
    <div class="mb-3">
      <%= f.label :icon, "アイコン画像", class: "form-label" %>
      <%= f.file_field :icon, class: "form-control" %>

      <!-- 既存のアイコン画像表示 -->
      <% if resource.icon.attached? %>
        <div class="mt-3">
          <%= image_tag(resource.icon, class: "img-thumbnail", size: "150x150") %>
        </div>
      <% end %>
    </div>

    <!-- 更新ボタン -->
    <div>
      <%= f.submit "更新する", class: "btn btn-primary" %>
    </div>
    
  <% end %>
</div>
