<div class="container">
  <h1 class="my-4">予約をする</h1>

  <%= form_with model: @reservation, local: true, class: "mb-4" do |f| %>
    <!-- エラーメッセージ表示 -->
    <% if @reservation.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading"><%= pluralize(@reservation.errors.count, "error") %> が発生しました:</h4>
        <ul>
          <% @reservation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :room_id, value: @room.id %> 

    <!-- フォームフィールド -->
    <div class="mb-3">
      <%= f.label :check_in, "チェックイン日" %>
      <%= f.date_select :check_in, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :check_out, "チェックアウト日" %>
      <%= f.date_select :check_out, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :guests, "人数" %>
      <%= f.number_field :guests, class: "form-control" %> 
    </div>

    <!-- 予約ボタン -->
    <div>
      <%= f.submit "予約する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
