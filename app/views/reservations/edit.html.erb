<div class="container">
  <h1 class="my-4">プロフィール編集</h1>

  <%= form_for @user, url: user_registration_path, html: { method: :put, multipart: true }, class: "mb-4" do |f| %>
    <!-- 名前フィールド -->
    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <!-- アイコン画像のアップロード -->
    <div class="mb-3">
      <%= f.label :icon, "アイコン画像", class: "form-label" %>
      <%= f.file_field :icon, class: "form-control" %>
    </div>

    <!-- 既存のアイコン画像表示 -->
    <% if @user.icon? %>
      <div class="mt-3">
        <%= image_tag(@user.icon.url, class: "img-thumbnail", size: "150x150") %>
      </div>
    <% end %>

    <!-- 更新ボタン -->
    <div>
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
